<script type="text/javascript">
    function ReToSearch() {
       
        var searchstr = $("#BASearch").val()

        var cururl = window.location.href
        
        if (cururl.toLowerCase().indexOf("home")>0)
        {
            if(searchstr!="")
            {
                location.href = "../BASearch/Index?Search=" + searchstr
            }
            else
            {
                location.href = "../BASearch/Index"
            }
           
        }
        else
        {
            if (searchstr != "") {
                location.href = "BASearch/Index?Search=" + searchstr
            }
            else
            {
                location.href = "BASearch/Index"
            }
        }
    }
  
</script>
